{
	"compilerOptions": {
		"target": "es2020", // Specifies the ECMAScript target version.
		"module": "commonjs", // Sets the module code generation to CommonJS.
		"strict": true, // Enables all strict type-checking options.
		"esModuleInterop": true, // Enables interoperability between CommonJS and ES Modules.
		"skipLibCheck": true, // Skips type checking of declaration files.
		"forceConsistentCasingInFileNames": true, // Ensures that file names are case-sensitive.
		"useUnknownInCatchVariables": false, // Uses 'unknown' instead of 'any' in catch variables.
		"outDir": "./dist" // Output directory for compiled JavaScript files.
	},
	"include": ["src/**/*.ts"], // Includes all TypeScript files under the 'src' directory.
	"exclude": ["node_modules"] // Excludes 'node_modules' from the compilation process.
}
